extends base

block append head
  // Landing-only styles (hero + beams + animations)
  link(rel='stylesheet' href='/css/landing.css')

block content
  // HERO
  section.landing-hero
    .landing-hero__bg
    .landing-hero__content(data-animate="up")
      img.landing-hero__logo(src='/img/logo-white.png' alt='Exploria logo')
      h1.landing-hero__title
        span.landing-hero__title-main OUTDOORS
        span.landing-hero__title-sub is where life happens
      a.btn.btn--green.btn--small(href='#tours') Discover our tours

  // ABOUT
  section.landing-section.landing-section--about
    .landing-container
      h2.landing-heading(data-animate="up") Exciting tours for adventurous people
      .landing-grid-2
        .landing-text(data-animate="up")
          h3.landing-subheading You’re going to fall in love with nature
          p.landing-paragraph
            | Lorem ipsum dolor sit amet, consectetur adipisicing elit. Sunt, aliquam!
          h3.landing-subheading Live adventures like you never have before
          p.landing-paragraph
            | Lorem ipsum dolor sit amet, consectetur adipisicing elit. Omnis, natus.
          a.landing-link(href='#tours') Learn more →
        .landing-composition(data-animate="up")
          img.landing-composition__photo.landing-composition__photo--p1(src='/img/landing/nat-1.jpg' alt='Photo 1')
          img.landing-composition__photo.landing-composition__photo--p2(src='/img/landing/nat-2.jpg' alt='Photo 2')
          img.landing-composition__photo.landing-composition__photo--p3(src='/img/landing/nat-3.jpg' alt='Photo 3')

  // FEATURES
  section.landing-section.landing-section--features
    .landing-beams
    .landing-container
      .landing-features
        .landing-feature(data-animate="up")
          svg.landing-feature__icon
            use(xlink:href='/img/icons.svg#icon-globe')
          h3.landing-feature__title Explore the world
          p.landing-feature__text Lorem ipsum dolor sit amet consectetur adipisicing elit.
        .landing-feature(data-animate="up")
          svg.landing-feature__icon
            use(xlink:href='/img/icons.svg#icon-compass')
          h3.landing-feature__title Meet nature
          p.landing-feature__text Lorem ipsum dolor sit amet consectetur adipisicing elit.
        .landing-feature(data-animate="up")
          svg.landing-feature__icon
            use(xlink:href='/img/icons.svg#icon-map')
          h3.landing-feature__title Find your way
          p.landing-feature__text Lorem ipsum dolor sit amet consectetur adipisicing elit.
        .landing-feature(data-animate="up")
          svg.landing-feature__icon
            use(xlink:href='/img/icons.svg#icon-heart')
          h3.landing-feature__title Live healthier
          p.landing-feature__text Lorem ipsum dolor sit amet consectetur adipisicing elit.

  // TOURS
  section.landing-section.landing-section--tours#tours
    .landing-container
      h2.landing-heading(data-animate="up") Most popular tours
      .card-container(data-animate="up")
        each tour, i in tours
          - const tone = i % 3 === 0 ? 'tone-blue' : i % 3 === 1 ? 'tone-orange' : 'tone-green'
          .card(class=tone)
            .card__header
              .card__picture
                .card__picture-overlay &nbsp;
                img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
              h3.heading-tertirary
                span= tour.name

            .card__details
              h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
              p.card__text= tour.summary

              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-map-pin')
                span= tour.startLocation.description

              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-calendar')
                span= tour.startDates[0].toLocaleString('en-us', { month: 'long', year: 'numeric' })

              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-flag')
                span= `${tour.locations.length} stops`

              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-user')
                span= `${tour.maxGroupSize} people`

            .card__footer
              p
                span.card__footer-value $#{tour.price}
                span.card__footer-text per person
              p.card__ratings
                span.card__footer-value= tour.ratingsAverage
                span.card__footer-text rating (#{tour.ratingsQuantity})
              a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Details

  // CTA
  section.landing-section.landing-section--cta
    .landing-container
      .landing-cta(data-animate="up")
        h2.landing-heading Ready for your next adventure?
        if user
          a.btn.btn--green.btn--small(href='/me') Go to your account
        else
          .landing-cta__actions
            a.btn.btn--green.btn--small(href='/login') Log in
            a.btn.btn--small.landing-btn-ghost(href='#') Sign up